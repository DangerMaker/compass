<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <LinearLayout
        android:id="@+id/stock_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="?attr/lable_list_style"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/stock_sort_edite_img"
            android:layout_width="13dip"
            android:layout_height="13dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/stock_deite_img" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stock_return"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恢复默认"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="?attr/white_text_color"
            android:background="@drawable/round_corner_red"
            android:textSize="13sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/stock_increase"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="涨幅"
            android:textColor="?attr/lable_list_style"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/stock_increase_nav"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/option_vertal_img"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_toLeftOf="@+id/stock_increase"
        android:id="@+id/stock_last"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="最新价"
            android:textColor="?attr/lable_list_style"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/stock_price_nav"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/option_vertal_img"
            />
    </LinearLayout>

    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/shadow_line" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/shadow_line" />
</RelativeLayout>
