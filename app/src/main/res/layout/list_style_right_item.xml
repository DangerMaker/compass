<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/list_title_line"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:background="?attr/shadow1"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/list_right_img"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_marginRight="10dip"
                android:id="@+id/zixun_img"
                android:layout_width="95dip"
                android:layout_height="70dip"
                android:scaleType="fitXY"
                android:src="@drawable/chaogu" />
        </RelativeLayout>

        <LinearLayout
            android:layout_toLeftOf="@id/list_right_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dip"
            android:layout_marginTop="7dip"
            android:orientation="vertical" >

            <TextView
                android:singleLine="true"
                android:id="@+id/time_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="2dip"
                android:maxLines="1"
                android:paddingTop="2dip"
                android:text="反对方答复"
                android:textColor="?attr/lable_list_style"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/time_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:ellipsize="end"
                    android:lines="2"
                    android:paddingTop="3dip"
                    android:text="2怀孕覅客户广泛宽高汇丰控股昆明铁路22"
                    android:textColor="?attr/lable_item_style"
                    android:lineSpacingMultiplier="1.2"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/time_detail"
                    android:id="@+id/time_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gaogaogao"
                    android:textColor="?attr/lable_item_style"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="?attr/shadow1"
         />

</LinearLayout>