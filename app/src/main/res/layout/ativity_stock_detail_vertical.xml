<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_main_color">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="?attr/main_theme_color"
        tools:background="@color/red">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/back_indicator" />

        <ImageButton
            android:id="@+id/search_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/stock_to_search" />

        <LinearLayout
            android:id="@+id/stock_title_layout"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/page_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00000000"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="基金重仓基金股票(B04016)"
                android:textColor="?attr/white_text_color"
                android:textSize="15dp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/stock_main_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:background="#00000000"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="交易中 2019-02-26 09:52:19"
                android:textColor="?attr/white_text_color"
                android:textSize="10dp" />

        </LinearLayout>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toStartOf="@id/stock_title_layout"
            android:layout_toLeftOf="@id/stock_title_layout"
            android:background="@color/transparent"
            android:padding="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/stock_before_img" />


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/stock_title_layout"
            android:layout_toRightOf="@id/stock_title_layout"
            android:background="@color/transparent"
            android:padding="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/stock_next_img" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/stock_detail_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tool_bar"
        android:paddingLeft="40dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/stock_big"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="32.23"
                android:textSize="32dp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/stock_main_percent"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/stock_big"
                android:layout_marginTop="5dip"
                android:gravity="center_horizontal"
                android:text="+0.53  +0.98%"
                android:textSize="13dp"
                app:autoSizeTextType="uniform" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/stock_open"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="5dp"
                android:text="21.23"
                app:autoSizeMaxTextSize="16dp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/stock_close"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/stock_open"
                android:maxLines="1"
                android:padding="5dp"
                android:text="21.23"
                app:autoSizeMaxTextSize="16dp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/stock_volume"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/stock_open"
                android:maxLines="1"
                android:padding="5dp"
                android:text="21.23"
                app:autoSizeMaxTextSize="16dp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/stock_change"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/stock_close"
                android:layout_toRightOf="@id/stock_volume"
                android:maxLines="1"
                android:padding="5dp"
                android:text="21.23"
                app:autoSizeMaxTextSize="16dp"
                app:autoSizeTextType="uniform" />


        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stock_detail_header"
        android:background="@drawable/kefu_item_btn_bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/minute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textSize="15sp"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="60分"
            android:textSize="15sp"

            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30分"
            android:textSize="15sp"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="15分"


            android:textSize="15sp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_below="@id/tab_layout"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="300dp"></RelativeLayout>

</RelativeLayout>