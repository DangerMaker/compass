<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">

    <View
        android:id="@+id/maodian"
        android:layout_width="0dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_height="0dp"/>

    <com.ez08.compass.ui.stocks.view.CapitalRectView
        android:layout_marginRight="20dp"
        android:layout_below="@id/maodian"
        android:layout_toLeftOf="@id/maodian"
        android:id="@+id/main_capital"
        android:layout_width="100dp"
        android:layout_height="80dp" />


    <com.ez08.compass.ui.stocks.view.CapitalRectView
        android:layout_marginLeft="20dp"
        android:layout_below="@id/maodian"
        android:layout_toRightOf="@id/maodian"
        android:id="@+id/retail_capital"
        android:layout_width="100dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/main_text"
        android:layout_below="@id/main_capital"
        android:layout_width="100dp"
        android:layout_toLeftOf="@id/maodian"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="?attr/lable_list_style"
        android:textSize="12sp"
        android:text="主力" />

    <TextView
        android:id="@+id/retail_text"
        android:layout_below="@id/main_capital"
        android:layout_width="100dp"
        android:layout_toRightOf="@id/maodian"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="?attr/lable_list_style"
        android:textSize="12sp"
        android:text="散户" />

    <TextView
        android:layout_toLeftOf="@id/maodian"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/main_text"
        android:id="@+id/main_jingmai"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="?attr/lable_list_style"
        android:textSize="12sp"
        android:text="" />

    <TextView
        android:layout_toRightOf="@id/maodian"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/retail_text"
        android:id="@+id/retail_jingmai"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="?attr/lable_list_style"
        android:textSize="12sp"
        android:text="" />

    <TextView
        android:layout_toLeftOf="@id/maodian"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/main_jingmai"
        android:id="@+id/main_buy"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="?attr/lable_list_style"
        android:textSize="12sp"
        android:text="" />

    <TextView
        android:layout_toRightOf="@id/maodian"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/retail_jingmai"
        android:id="@+id/retail_buy"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="?attr/lable_list_style"
        android:textSize="12sp"
        android:text="" />

    <TextView
        android:layout_toLeftOf="@id/maodian"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/main_buy"
        android:id="@+id/main_sell"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="?attr/lable_list_style"
        android:textSize="12sp"
        android:text="" />

    <TextView
        android:layout_toRightOf="@id/maodian"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/retail_buy"
        android:id="@+id/retail_sell"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="?attr/lable_list_style"
        android:textSize="12sp"
        android:text="" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/main_text"
        android:id="@+id/jinmaie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:textColor="?attr/lable_list_style"
        android:textSize="12sp"
        android:text="净流入" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/jinmaie"
        android:id="@+id/mairujine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:textColor="?attr/lable_list_style"
        android:textSize="12sp"
        android:text="资金流入" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/mairujine"
        android:id="@+id/maichujine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:textColor="?attr/lable_list_style"
        android:textSize="12sp"
        android:text="资金流出" />


</RelativeLayout>