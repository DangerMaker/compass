<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_marginBottom="9dip"
        android:layout_marginTop="9dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:visibility="gone"
            android:id="@+id/collect_check"
            android:layout_gravity="center_vertical"
            android:layout_width="30dip"
            android:layout_height="30dip" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:singleLine="true"
                android:id="@+id/time_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="2dip"
                android:maxLines="1"
                android:paddingTop="2dip"
                android:text="午：银行领涨"
                android:textColor="?attr/lable_list_style"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/time_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLength="35"
                    android:paddingTop="3dip"
                    android:text="2怀孕覅客户广泛宽高汇丰控股昆明铁路22"
                    android:textColor="?attr/lable_item_style"
                    android:textSize="14sp" />

                <TextView
                    android:layout_below="@id/time_detail"
                    android:id="@+id/time_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gaogaogao"
                    android:textColor="?attr/lable_item_style"
                    android:textSize="14sp" />
                <TextView
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/time_detail"
                    android:id="@+id/compass_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每日内参"
                    android:textColor="?attr/lable_item_style"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="?attr/shadow1"
        />

</LinearLayout>