<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_tab_bar"
        android:orientation="vertical"></RelativeLayout>

    <LinearLayout
        android:id="@+id/main_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="58dip"
        android:layout_alignParentBottom="true"
        android:background="?attr/main_bottom_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_page"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home_page"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:contentDescription="@null"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="行情"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_service"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_my_service"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:contentDescription="@null"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="资讯"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_class"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_class"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:contentDescription="@null"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="特色课堂"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trade"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_trade"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:contentDescription="@null"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="交易"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/seek"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_seek"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:contentDescription="@null"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/img_seek"
                android:gravity="center"
                android:text="客服"
                android:textSize="12sp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_red_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_seek"
                android:contentDescription="@null"
                android:src="@drawable/iv_dot" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>